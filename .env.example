# Core
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Database (TiDB/MySQL)
MYSQL_HOST=your-host
MYSQL_PORT=4000
MYSQL_DB=your-db
MYSQL_USER=your-user
MYSQL_PASS=your-password

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_BUCKET=podkids-audio

# Google Cloud TTS (choose one)
GCP_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"your-sa@your-project.iam.gserviceaccount.com","token_uri":"https://oauth2.googleapis.com/token"}
# Or point to a local file in dev:
# GOOGLE_APPLICATION_CREDENTIALS=credentials.json

# Admin and alerts
ADMIN_TOKEN=change-me
ADMIN_DASH_SECRET=change-me
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# Optional tuning
CHARS_PER_MIN=660
AVG_CHARS_PER_TOKEN=2.8
MAXTOK_BUFFER=0.25
MIN_TOKENS_FLOOR=512
MIN_CHARS_FLOOR=600
